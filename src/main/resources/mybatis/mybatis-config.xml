<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
	  <!-- Oracle 테이블의 컬럼이 mem_id 이고, DTO의 필드변수가 memId 일때 매칭이 가능하게 하는 옵션 -->
	  <setting name="mapUnderscoreToCamelCase" value="true"/> 
	  <!-- 널 허용 -->
	  <setting name="jdbcTypeForNull" value="NULL"/>
	</settings>
	<typeAliases>
		<!-- 별칭으로 사용 등록 -->
		<typeAlias type="com.study.free.member.vo.MemberVO" alias="MemberVO"/>
		<typeAlias type="com.study.free.community.vo.CommunityPostVO" alias="CommunityPostVO"/>
		<typeAlias type="com.study.free.community.vo.CreateCommentVO" alias="CreateCommentVO"/>
		
	</typeAliases>
	
</configuration>